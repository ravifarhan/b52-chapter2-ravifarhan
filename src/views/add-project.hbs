    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600&display=swap">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />

    <style>
      body {
        background-color: #e3e7eb;
        font-family: 'Poppins', sans-serif;
      }
    </style>

  </head>
  <body>
    <nav class="navbar navbar-expand-lg bg-body-light px-5" style="background-color: #f4f3f3;">
      <div class="container-fluid gap-3">
        <a class="navbar-brand" href="/">
          <img src="assets/img/dumbways.png" alt="logo" width="40">
        </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a class="nav-link" href="/">Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link fw-bold active" href="/add-project">Add Project</a>
            </li>
          </ul>
            <a href="/contact" class="btn btn-sm btn-secondary rounded-3" style="color: white; background-color: #111727">Contact Me</a>
        </div>
      </div>
    </nav>

    <div class="container w-50 mt-5" >
      <h3 class="mb-5 text-center fw-bold"> ADD MY PROJECT</h3>
      <form class="row g-4" action="/add-project" method="post">
        <div class="col-12">
          <label for="project_name" class="form-label fw-bold">Project Name</label>
          <input type="text" class="form-control shadow-lg" id="project_name" name="project_name">
        </div>
        <div class="col-md-6">
          <label for="star-date" class="form-label fw-bold">Star Date</label>
          <input type="date" class="form-control shadow-lg" id="startdate" name="startdate">
        </div>
        <div class="col-md-6">
          <label for="end-date" class="form-label fw-bold">End Date</label>
          <input type="date" class="form-control shadow-lg" id="enddate" name="enddate">
        </div>
        <div class="col-12">
            <label class="form-label fw-bold" for="description">Description</label>        
          <textarea class="form-control shadow-lg" id="description" name="description" style="height: 100px"></textarea>
        </div>
        <div class="form-checkbox">
          <label class="form-label fw-bold">Technology</label>
          <div class="row d-flex gap-3">
              <div class="col-md-4">
                  <input class="form-check-input shadow-lg" type="checkbox" name="nodejs" value="nodejs" id="nodejs">
                  <label class="form-check-label" for="nodejs">
                    Node Js
                  </label>
              </div>
              <div class="col-md-4">
                  <input class="form-check-input shadow-lg" type="checkbox" name="vuejs" value="vuejs" id="vuejs">
                  <label class="form-check-label" for="vuejs">
                    Vue Js
                  </label>
              </div>
              <div class="col-md-4">
                  <input class="form-check-input shadow-lg" type="checkbox" name="reactjs" value="reactjs" id="reactjs">
                  <label class="form-check-label" for="reactjs">
                    React Js
                  </label>
              </div>
              <div class="col-md-4">
                  <input class="form-check-input shadow-lg" type="checkbox" name="golang" value="golang" id="golang">
                  <label class="form-check-label" for="golang">
                    Golang
                  </label>
              </div>
          </div>
        </div>
            <div class="mb-1">
            <label for="upload-image" class="form-label fw-bold">Upload Image</label>
                <div class="input-group">
                    <input type="file" class="form-control" id="upload-image">
                    <label class="input-group-text" for="upload-image"><i class="fa-solid fa-paperclip"></i></label>
                </div>
                </div>
            <div class="d-flex col-12 justify-content-end">
                <button type="submit" class="btn btn-secondary rounded-5 px-4 fw-bold" style="color: white; background-color: #111727">Submit</button>
            </div>
      </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js" integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+" crossorigin="anonymous"></script>
  </body>
</html>